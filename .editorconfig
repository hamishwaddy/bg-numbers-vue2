root = true

[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

[*.md]
trim_trailing_whitespace = false

# Ignore paths
[node_modules/**]
charset = none
end_of_line = none
insert_final_newline = none
indent_size = none
indent_style = none
trim_trailing_whitespace = none
